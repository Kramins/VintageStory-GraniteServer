    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Server Only",
            "type": "coreclr",
            "request": "launch",
            "program": "/app/VintagestoryServer.dll",
            "preLaunchTask": "build-server",
            "args": [
                "--tracelog",
                "--dataPath",
                "/data",
                "--addModPath",
                "${workspaceFolder}/bin/mods"
            ],
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Launch Server And ClientApp",
            "type": "coreclr",
            "request": "launch",
            "program": "/app/VintagestoryServer.dll",
            "preLaunchTask": "build",
            "args": [
                "--tracelog",
                "--dataPath",
                "/data",
                "--addModPath",
                "${workspaceFolder}/bin/mods"
            ],
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Launch Server with UI Dev",
            "type": "coreclr",
            "request": "launch",
            "program": "/app/VintagestoryServer.dll",
            "preLaunchTask": "build-server",
            "args": [
                "--tracelog",
                "--addModPath",
                "${workspaceFolder}/bin/mods"
            ],
            "console": "internalConsole",
            "stopAtEntry": false
        }
    ],
    "compounds": [
        {
            "name": "Full Dev Environment",
            "configurations": [
                "Launch Server with UI Dev"
            ],
            "preLaunchTask": "npm run dev",
            "stopAll": true
        }
    ]
}