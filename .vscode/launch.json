{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Mod",
            "type": "coreclr",
            "request": "launch",
            "program": "/app/VintagestoryServer.dll",
            "preLaunchTask": "build-mod",
            "args": [
                "--tracelog",
                "--dataPath",
                "/data",
                "--addModPath",
                "${workspaceFolder}/Granite.Mod/bin/mods"
            ],
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Launch Granite Server (Postgres)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-server",
            "program": "${workspaceFolder}/Granite.Server/bin/Debug/net9.0/Granite.Server.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Granite.Server",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "GS_DATABASETYPE": "PostgreSQL",
                "GS_DATABASEHOST": "postgres",
                "GS_DATABASEPORT": "5432",
                "GS_DATABASENAME": "Granite",
                "GS_DATABASEUSERNAME": "postgres",
                "GS_DATABASEPASSWORD": "postgres"
            },
            "console": "integratedTerminal",
            "stopAtEntry": false
        },
        {
            "name": "Launch Granite Server (SQLite)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-server",
            "program": "${workspaceFolder}/Granite.Server/bin/Debug/net9.0/Granite.Server.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Granite.Server",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "GS_DATABASETYPE": "SQLite"
                // "GS_SQLITEFILEPATH": "${workspaceFolder}/Granite.Server/Granite.db"
            },
            "console": "integratedTerminal",
            "stopAtEntry": false
        }
    ],
    "compounds": [
        {
            "name": "Mod + Granite Server (Postgres)",
            "configurations": [
                "Launch Mod",
                "Launch Granite Server (Postgres)"
            ],
            "stopAll": true
        },
        {
            "name": "Mod + Granite Server (SQLite)",
            "configurations": [
                "Launch Mod",
                "Launch Granite Server (SQLite)"
            ],
            "stopAll": true
        },
        {
            "name": "Full Dev Environment",
            "configurations": [
                "Launch Granite Server (Postgres)"
            ],
            "preLaunchTask": "npm dev",
            "stopAll": true
        }
    ]
}